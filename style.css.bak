
  :host {
    body {
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
  }
  
  .header {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 50px 0;
  }
  
  .header-title {
    font-size: 40px;
    margin-bottom: 20px;
  }
  
  .header-subtitle {
    font-size: 20px;
  }
  
  section {
    padding: 50px;
    text-align: center;
  }
  
  .section-title {
    font-size: 30px;
    margin-bottom: 30px;
  }
  
  .services-list {
    list-style: none;
    display: inline-block;
    margin: 0;
    padding: 0;
  }
}